<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <style>
      * {
        margin: 0%;
        padding: 0%;
        box-sizing: border-box;
      }
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f5f5f5;
      }

      .AllSHortCode {
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 20px;
        width: 30rem;
        text-align: center;
      }

      .FormFIv {
        margin: 0 auto;
      }

      form {
        display: flex;
        flex-direction: column;
        gap: 15px;
      }

      label {
        font-size: 14px;
        color: #333;
        text-align: left;
      }

      input[type="text"] {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
        transition: border-color 0.3s ease;
      }

      input[type="text"]:focus {
        border-color: #4caf50;
      }

      button.SubmitBtn {
        padding: 10px 15px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        background-color: #4caf50;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      button.SubmitBtn:hover {
        background-color: #45a049;
      }

      .alldata {
        display: flex;
        flex-direction: column;
        width: 90%;
        margin: auto;
        margin-top: 2rem;
        height: 11rem;
        overflow-y: scroll;
      }

      .alldata::-webkit-scrollbar {
        display: none; /* Chrome, Safari, and Opera */
      }

      h2 {
        text-align: center;
        color: #333;
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      thead {
        position: sticky;
        top: 0;
        background-color: #f4f4f4; /* Sticky header background color */
        z-index: 1;
      }

      th,
      td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        font-weight: bold;
        background-color: #f4f4f4;
      }

      tbody tr:nth-child(even) {
        background-color: #f9f9f9;
      }

      tbody tr:hover {
        background-color: #f1f1f1;
      }

      p {
        text-align: center;
        color: #666;
      }

      @media (max-width: 480px) {
        .AllSHortCode {
          padding: 15px;
        }

        input[type="text"] {
          font-size: 14px;
        }

        button.SubmitBtn {
          font-size: 14px;
        }
      }
    </style>
  </head>

  <body>
    <div class="AllSHortCode">
      <div class="FormFIv">
        <form method="post" action="/url">
          <label for="redirectUrl">Enter Your Original URL</label>
          <input
            type="text"
            name="redirectUrl"
            id="redirectUrl"
            placeholder="https://www.example.com"
          />
          <button class="SubmitBtn" type="submit">Get shortUrl</button>
        </form>
      </div>

      <div class="alldata">
        <h2>Short URLs</h2>
        <% if (locals.dbData && dbData.length > 0) { %>
        <table border="1" cellspacing="0" cellpadding="5">
          <thead>
            <tr>
              <th>#</th>
              <th>Short ID</th>
              <th>Redirect URL</th>
              <th>Full URL</th>
            </tr>
          </thead>
          <tbody>
            <% dbData.forEach((element, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= element.shortId %></td>
              <td><%= element.redirectUrl %></td>
              <td>
                <a href="http://localhost:7070/url/<%= element.shortId %>">
                  http://localhost:7070/url/<%= element.shortId %>
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% }%><% if (locals.id) { %>
        <p>Your generated URL is:</p>
        <a href="http://localhost:7070/url/<%= id %>">
          http://localhost:7070/url/<%= id %>
        </a>
        <% } %>
      </div>
    </div>
  </body>
</html>
